<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sky.casper.skywalker_new_app">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Skywalker"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Activities.ActivityAccount"></activity>
        <activity
            android:name=".Activities.ActivityProfile"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar">
            <intent-filter>
                <action android:name=".Activities.ActivityProfile" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ActivityProfile"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar">
            <intent-filter>
                <action android:name=".Activities.ActivityProfile" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ActivitySettings"
            android:label="@string/title_activity_settings"
            tools:ignore="InnerclassSeparator"></activity>
        <activity
            android:name=".Activities.ActivityAbout"
            android:label="@string/title_activity_about"
            tools:ignore="InnerclassSeparator"></activity>
        <activity
            android:name=".Activities.ActivityUnderConstruction"
            android:label="Under Construction"
            tools:ignore="InnerclassSeparator"></activity>
        <activity
            android:name=".Activities.ActivityAbout"
            android:label="@string/title_activity_about"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Activities.ActivityUnderConstruction"
            android:label="Under Construction"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Activities.ActivityHome"
            android:screenOrientation="portrait"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".Activities.ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ActivityLogin"
            android:configChanges="keyboardHidden"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ActivitySignUp"
            android:configChanges="keyboardHidden"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.ActivityLogin" />
        </activity>
    </application>

</manifest>